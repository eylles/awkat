#!/bin/sh
if [ "$#" -gt 1 ]; then
    /bin/cat "$@" | awk -v file="$*" '
    BEGIN { print  "\x1b[30;1m───────┬────────────────────────────────────────────────────────────────────────\x1b[0m" };
    BEGIN { printf "\x1b[30;1m%6s │\x1b[0m \x1b[32;1m %s \x1b[0m \n", "file", file };
    BEGIN { print  "\x1b[30;1m───────┼────────────────────────────────────────────────────────────────────────\x1b[0m" };
          { printf "\x1b[30;1m%6d │\x1b[0m %s\n", NR, $0 };
    END   { print  "\x1b[30;1m───────┴────────────────────────────────────────────────────────────────────────\x1b[0m" };
    '

else
    highlight -O ansi --force "$1" | awk -v file="$1" '
    BEGIN { print  "\x1b[30;1m───────┬────────────────────────────────────────────────────────────────────────\x1b[0m" };
    BEGIN { printf "\x1b[30;1m%6s │\x1b[0m \x1b[32;1m %s \x1b[0m \n", "file", file };
    BEGIN { print  "\x1b[30;1m───────┼────────────────────────────────────────────────────────────────────────\x1b[0m" };
          { printf "\x1b[30;1m%6d │\x1b[0m %s\n", NR, $0 };
    END   { print  "\x1b[30;1m───────┴────────────────────────────────────────────────────────────────────────\x1b[0m" };
    '
fi
